SDL=`sdl-config --libs`
OBJ=main.o Events.o Megaman.o SSB.o BaseCharacter.o Entity.o Platform.o Projectile.o CharSelect.o TimeControl.o
EVENTS=Events
BASE=BaseCharacter
MEGA=Megaman
PROJ=Projectile
SEL=CharSelect
TIME = TimeControl

all:	main

script:
	./toLinux.sh

main:	$(OBJ)
	g++ $(SDL) $(OBJ) -o main

main.o:	main.cpp
	g++ main.cpp -c

SSB.o:	SSB.cpp
	g++ $(SDL) SSB.cpp -c

Events.o: $(EVENTS).cpp
	g++ $(SDL) $(EVENTS).cpp -c

Megaman.o: $(MEGA).cpp
	g++ $(SDL) $(MEGA).cpp -c

BaseCharacter.o: $(BASE).cpp
	g++ $(SDL) $(BASE).cpp -c

Platform.o: Platform.cpp
	g++ $(SDL) Platform.cpp -c

Entity.o: Entity.cpp
	g++ $(SDL) Entity.cpp -c

Projectile.o: $(PROJ).cpp
	g++ $(SDL) $(PROJ).cpp -c

CharSelect.o: $(SEL).cpp
	g++ $(SDL) $(SEL).cpp -c

TimeControl.o: $(TIME).cpp
	g++ $(SDL) $(TIME).cpp -c

clean:
	rm -f *.o *~ main
	rm -f */*~
